<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.njh.common.widget.RoundAngleImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:scaleType="centerCrop"
            app:common_radius="5dp" />

        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/home_ic_love_selected" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_photo"
            android:textColor="@color/res_black"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="32dp"
            android:textColor="@color/res_gray_666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="32dp"
            android:layout_alignParentRight="true"
            android:textColor="#FFFF5900" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>