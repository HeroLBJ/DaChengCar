<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="20dp"
    android:paddingTop="25dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="杭州东红"
            android:textColor="@color/res_black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <com.bocai.service.widget.FlexibleRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="67dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize = "0.5"
            app:colorFillOff="@color/white"
            app:colorFillOn="#FFFF711F"
            app:colorFillPressedOn="#FFFF711F"
            app:colorOutlineOn="#FFFF711F" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="17dp"
        android:text="浙江省杭州市拱墅区康园路15号康城工业园"
        android:textColor="@color/res_gray_666" />

    <TextView
        android:id="@+id/tv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail"
        android:layout_marginTop="12dp"
        android:text="#0571-88073081"
        android:textColor="@color/res_red_selected"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:text="10km"
        android:textColor="@color/res_gray_333"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_call"
        android:layout_marginTop="20dp"
        android:background="@color/res_line_bg" />

</RelativeLayout>