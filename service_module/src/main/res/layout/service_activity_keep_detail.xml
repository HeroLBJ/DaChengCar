<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_above="@id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="39dp"
                android:text="维修信息填写"
                android:textColor="@color/res_black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="选择门店"
                android:textColor="@color/res_follow_end"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="19dp"
                            android:text="选择城市"
                            android:textColor="@color/res_gray_333" />

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="19dp"
                            android:hint="请选择"
                            android:textColor="#FFBEBEBE" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="19dp"
                            android:text="选择门店"
                            android:textColor="@color/res_gray_333" />

                        <TextView
                            android:id="@+id/tv_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="19dp"
                            android:hint="请选择"
                            android:textColor="#FFBEBEBE" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="19dp"
                            android:text="预约时间"
                            android:textColor="@color/res_gray_333" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="19dp"
                            android:hint="请选择"
                            android:textColor="#FFBEBEBE" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="19dp"
                            android:text="选择时间段"
                            android:textColor="@color/res_gray_333" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="19dp"
                            android:hint="请选择"
                            android:textColor="#FFBEBEBE" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_info"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="个人信息"
                android:textColor="@color/res_follow_end"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="19dp"
                            android:text="送修人"
                            android:textColor="@color/res_gray_333" />

                        <EditText
                            android:id="@+id/et_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="19dp"
                            android:background="@null"
                            android:hint="请输入送修人姓名"
                            android:textColor="#FFBEBEBE"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="19dp"
                            android:text="选择门店"
                            android:textColor="@color/res_gray_333" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="19dp"
                            android:background="@null"
                            android:hint="请输入手机号"
                            android:textColor="#FFBEBEBE"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_user"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="请确保手机号填写准确，后续客服将联系此号码"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/res_follow_end"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>