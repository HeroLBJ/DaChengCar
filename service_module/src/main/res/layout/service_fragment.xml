<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:id="@+id/rl_maintain"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/service_maintain_bg">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/service_ic_keep" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginBottom="22dp"
                        android:text="预约保养"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_repair"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/service_repair_bg">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/service_ic_repair" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginBottom="22dp"
                        android:text="预约维修"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_call_rescue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="21dp"
                    android:drawableLeft="@drawable/service_help"
                    android:drawablePadding="10dp"
                    android:text="一键救援"
                    android:textColor="@color/res_black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="20dp"
                    android:text="快速拨打就近服务站热线"
                    android:textColor="#FFBEBEBE"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_call1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="67dp"
                    android:background="@drawable/service_shape_green_circle">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/service_fab_call" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/service_shape_red_circle">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/service_fab_right" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_call_110"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="21dp"
                    android:drawableLeft="@drawable/service_110"
                    android:drawablePadding="10dp"
                    android:text="一键报案"
                    android:textColor="@color/res_black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="20dp"
                    android:text="各大紧急报案联系电话"
                    android:textColor="#FFBEBEBE"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_call3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="67dp"
                    android:background="@drawable/service_shape_green_circle">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/service_fab_call" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_call4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/service_shape_red_circle">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/service_fab_right" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/service_map"
                    android:drawablePadding="10dp"
                    android:paddingLeft="39dp"
                    android:paddingTop="31dp"
                    android:paddingBottom="17dp"
                    android:text="一键导航"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="31dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/service_icon_arrow_right_999" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/res_gray_main_text" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/service_tool"
                    android:drawablePadding="10dp"
                    android:paddingLeft="39dp"
                    android:paddingTop="26dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="22dp"
                    android:text="配件查询"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="31dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/service_icon_arrow_right_999" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/res_gray_main_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/service_feedback"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="39dp"
                    android:paddingTop="26dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="22dp"
                    android:text="投诉建议"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="31dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/service_icon_arrow_right_999" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/res_gray_main_text" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>