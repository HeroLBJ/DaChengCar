                    android:layout_centerInParent="true"
                    android:drawableRight="@drawable/mine_ic_right_jiantou"
                    android:drawablePadding="10dp"
                    android:textColor="@color/res_gray_666"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
