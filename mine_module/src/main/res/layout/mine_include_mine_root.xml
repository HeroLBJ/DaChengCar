<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_my_car"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_user_photo"
        android:layout_marginTop="-38dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/mine_ic_flower_bg"
            android:gravity="center"
            android:text="签到"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text="李炳军"
            android:textColor="@color/res_black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_user_sex"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="64dp"
            android:layout_toRightOf="@id/tv_user_name" />

        <TextView
            android:id="@+id/tv_user_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="该用户很懒，什么都没留下。"
            android:textColor="@color/res_gray_666"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_say"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_grow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_score_grow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="#FFFF5900"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_score_grow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="成长值"
                    android:textColor="@color/res_gray_999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@color/res_gray_999" />

            <RelativeLayout
                android:id="@+id/rl_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_score_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="#FFFF5900"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_score_score"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="积分"
                    android:textColor="@color/res_gray_999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@color/res_gray_999" />

            <RelativeLayout
                android:id="@+id/rl_follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_score_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="#FFFF5900"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_score_follow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="关注"
                    android:textColor="@color/res_gray_999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@color/res_gray_999" />

            <RelativeLayout
                android:id="@+id/rl_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_score_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="#FFFF5900"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_score_fans"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="粉丝"
                    android:textColor="@color/res_gray_999"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/ll1"
            android:background="#FFF7F7F8" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:paddingTop="26dp">

            <RelativeLayout
                android:id="@+id/rl_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_2"
                    android:drawablePadding="10dp"
                    android:text="我的活动"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_release"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_2"
                    android:drawablePadding="10dp"
                    android:text="我的发布"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_3"
                    android:drawablePadding="10dp"
                    android:text="我的消息"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv3"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_4"
                    android:drawablePadding="10dp"
                    android:text="我的收藏"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv4"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll2"
            android:paddingTop="26dp"
            android:paddingBottom="26dp">

            <RelativeLayout
                android:id="@+id/rl_score_bill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_5"
                    android:drawablePadding="10dp"
                    android:text="积分账单"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv5"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_car_bill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:drawableTop="@drawable/mine_table_6"
                    android:drawablePadding="10dp"
                    android:text="车辆订单"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv6"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_service_bill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_7"
                    android:drawablePadding="10dp"
                    android:text="服务订单"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv7"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableTop="@drawable/mine_table_8"
                    android:drawablePadding="10dp"
                    android:text="我的评论"
                    android:textColor="@color/res_gray_333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/tv8"
                    android:background="@drawable/mine_circle_red_6dp"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/ll3"
            android:background="#FFF7F7F8" />


        <TextView
            android:id="@+id/tv_complain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:background="@color/white"
            android:drawableRight="@drawable/mine_ic_right_jiantou"
            android:paddingLeft="29dp"
            android:paddingTop="22dp"
            android:paddingRight="21dp"
            android:paddingBottom="18dp"
            android:text="投诉与建议"
            android:textColor="@color/res_gray_333"
            android:textSize="13sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_complain"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/res_gray_999" />

        <TextView
            android:id="@+id/tv_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:background="@color/white"
            android:drawableRight="@drawable/mine_ic_right_jiantou"
            android:paddingLeft="29dp"
            android:paddingTop="22dp"
            android:paddingRight="21dp"
            android:paddingBottom="18dp"
            android:text="积分商城"
            android:textColor="@color/res_gray_333"
            android:textSize="13sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_support"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/res_gray_999" />


    </RelativeLayout>

    <com.allen.library.CircleImageView
        android:id="@+id/civ_user_photo"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@color/white" />

    <com.allen.library.CircleImageView
        android:id="@+id/civ_user_level"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/civ_user_photo"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="-16dp"
        android:layout_toRightOf="@id/civ_user_photo" />


</RelativeLayout>