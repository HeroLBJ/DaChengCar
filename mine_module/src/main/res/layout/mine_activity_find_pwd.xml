<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8F9">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="请输入手机号"
        android:paddingLeft="20dp"
        android:maxLines="1"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingTop="25dp"
        android:paddingBottom="22dp"
        android:textColor="@color/res_gray_999"
        android:textSize="14sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/et_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/res_line_bg" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:background="@color/white"
        android:hint="请输入短信验证码"
        android:paddingLeft="20dp"
        android:paddingTop="25dp"
        android:maxLines="1"
        android:inputType="number"
        android:paddingBottom="22dp"
        android:textColor="@color/res_gray_999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_code"
        android:onClick="onCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:layout_marginRight="21dp"
        android:text="获取验证码"
        android:textColor="@color/res_login_select_color"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/res_login_select_color"
        android:gravity="center"
        android:onClick="onSubmit"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>