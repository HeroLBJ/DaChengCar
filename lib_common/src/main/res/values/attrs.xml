<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="common_round_angle_image_view">
        <attr name="common_radius" format="dimension" />
        <attr name="common_radius_left_top" format="dimension" />
        <attr name="common_radius_right_top" format="dimension" />
        <attr name="common_radius_right_bottom" format="dimension" />
        <attr name="common_radius_left_bottom" format="dimension" />
    </declare-styleable>

    <style name="common_dialog_style" parent="@android:style/Theme.Dialog">
        <!-- 无边框设置 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--dialog遮罩透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>