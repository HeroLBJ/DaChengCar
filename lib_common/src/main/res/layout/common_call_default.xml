<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/res_write_radius_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="提示"
        android:textColor="@color/res_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="确定拨打400-890-5678？"
        android:textColor="@color/res_gray_333"
        android:textSize="16sp" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv2"
        android:layout_marginTop="30dp"
        android:background="@color/res_line_bg" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_selector_white_grey"
            android:gravity="center"
            android:paddingTop="15dp"
            android:enabled="true"
            android:paddingBottom="15dp"
            android:text="取消"
            android:textColor="@color/res_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/res_line_bg" />

        <TextView
            android:id="@+id/tv_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="true"
            android:background="@drawable/common_selector_white_grey"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="确定"
            android:textColor="#00a"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>